// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              String   @id @default(cuid())
  title           String
  authors         String[]
  genre           String   // Dark Romance, Romance, Fantasy
  description     String?  @db.Text
  isbn            String?
  publishedDate   String?
  publisher       String?
  pageCount       Int?
  categories      String[]
  imageUrl        String?
  language        String?
  previewLink     String?
  
  // Tracking fields
  rating          Int?     // 1-5 stars
  status          String   // unread, read
  format          String   // physical, kindle, both
  dateAdded       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([genre])
  @@index([status])
  @@index([rating])
}
